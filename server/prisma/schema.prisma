// main prisma commands:
// // npx prisma generate
// - generates the prisma client based on this schema
// // npx prisma db pull
// - pulls the current database schema and updates this file
// - has already caused db drift
// // npx prisma migrate dev
// - creates a new migration from schema changes

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
  plans    Plan[]
}

model Plan {
  id       Int       @id @default(autoincrement())
  name     String
  userId   Int
  majorId  Int
  major    Major     @relation(fields: [majorId], references: [id])
  user     User      @relation(fields: [userId], references: [id])
  quarters Quarter[]

  @@index([majorId], map: "Plan_majorId_fkey")
  @@index([userId], map: "Plan_userId_fkey")
}

model Major {
  id                    Int                     @id @default(autoincrement())
  name                  String
  MajorRequirementGroup MajorRequirementGroup[]
  plans                 Plan[]
}

model Quarter {
  id            Int         @id @default(autoincrement())
  quarterNumber Int
  planId        Int
  planClasses   PlanClass[]
  plan          Plan        @relation(fields: [planId], references: [id])

  @@index([planId], map: "Quarter_planId_fkey")
}

model Requirement {
  id                  Int                   @id @default(autoincrement())
  name                String
  coursesToChoose     Int
  requirementClasses  RequirementClasses[]
  requirementsInGroup RequirementsInGroup[]
}

model Class {
  id                 Int                  @id @default(autoincrement())
  units              Float
  code               String               @unique
  description        String
  planClasses        PlanClass[]
  requiredFor        Prereq[]             @relation("RequiredFor")
  prereqs            Prereq[]             @relation("Prereq")
  requirementClasses RequirementClasses[]
}

model PlanClass {
  quarterId Int
  classId   Int
  class     Class   @relation(fields: [classId], references: [id])
  quarter   Quarter @relation(fields: [quarterId], references: [id])

  @@id([quarterId, classId])
  @@index([classId], map: "PlanClass_classId_fkey")
}

model RequirementClasses {
  reqId       Int
  classId     Int
  class       Class       @relation(fields: [classId], references: [id])
  requirement Requirement @relation(fields: [reqId], references: [id])

  @@id([reqId, classId])
  @@index([classId], map: "RequirementClasses_classId_fkey")
}

model Prereq {
  requiredForId     Int
  prereqId          Int
  prereqGroupNumber Int
  requiredFor       Class @relation("RequiredFor", fields: [requiredForId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Prereq_ibfk_1")
  prereq            Class @relation("Prereq", fields: [prereqId], references: [id], onDelete: NoAction, onUpdate: NoAction, map: "Prereq_ibfk_2")

  @@id([requiredForId, prereqId, prereqGroupNumber])
  @@index([prereqId], map: "prereqId")
}

model RequirementGroup {
  id                      Int                     @id @default(autoincrement())
  name                    String
  numRequirementsToChoose Int                     @default(1)
  type                    String?                 @db.VarChar(50)
  MajorRequirementGroup   MajorRequirementGroup[]
  requirementsInGroup     RequirementsInGroup[]
}

model RequirementsInGroup {
  reqId       Int
  reqGroupId  Int
  reqGroup    RequirementGroup @relation(fields: [reqGroupId], references: [id])
  requirement Requirement      @relation(fields: [reqId], references: [id])

  @@id([reqId, reqGroupId])
  @@index([reqGroupId], map: "RequirementsInGroup_reqGroupId_fkey")
}

model MajorRequirementGroup {
  majorId            Int
  requirementGroupId Int
  Major              Major            @relation(fields: [majorId], references: [id], onDelete: Cascade, map: "MajorRequirementGroup_ibfk_1")
  RequirementGroup   RequirementGroup @relation(fields: [requirementGroupId], references: [id], onDelete: Cascade, map: "MajorRequirementGroup_ibfk_2")

  @@id([majorId, requirementGroupId])
  @@index([requirementGroupId], map: "requirementGroupId")
}
